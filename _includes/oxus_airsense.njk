{% set assetsVersion = "18" %}
<!DOCTYPE html>
<html lang="en">
<head>
    {% include 'app_head.njk' %}
</head>

<body class="mx-auto mb-10">
<header class="navbar-custom">
    <nav>
        <div class="d-flex justify-content-between align-items-center">
            <div class="back-home">
                <a href="{{ mySite.menu.home.link }}"><i class="fa-solid fa-arrow-left"></i></a>
            </div>
            <a href="{{ mySite.menu.home.link }}" class="centered-link">
                <img src="{{ baseUrl }}../assets/img/logo/newLogo.png" alt="Logo" />
            </a>
        </div>

        <div class="right-block">
            <div class="dropdown-custom">
                <div class="dropdown-content">
                    <a href="{{ mySite.menu.home.link }}">{{ mySite.menu.home.value }}</a>
                    <a href="mailto:{{ mySite.email }}" class="text-uppercase">{{ mySite.email }}</a>
                    <a href="tel:{{ mySite.phone }}" class="text-uppercase">{{ mySite.short_phone }}</a>
                    <a href="{{ mySite.telegram }}"><i class="fa-brands fa-telegram"></i> TELEGRAM</a>
                </div>
            </div>
            <div class="menu-lang-content">
                <div class="dropdown-lang-wrapper">
                    <a href="#" id="language-dropdown" class="product-dropdown-link">{{mySite.menu.currentLang}} <i class="fa-solid fa-chevron-down"></i> </a>
                    <div class="lang-dropdown-menu">
                        <a href="{{ mySite.menu.firstLang.link }}">{{ mySite.menu.firstLang.value }}</a>
                        <a href="{{ mySite.menu.secondLang.link }}">{{ mySite.menu.secondLang.value }}</a>
                        <a href="{{ mySite.menu.thirdLang.link }}">{{ mySite.menu.thirdLang.value }}</a>
                    </div>
                </div>
            </div>
            <button id="hamburger-button">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="contact-info align-items-center">
                <a href="mailto:{{ mySite.email }}" class="mx-2 text-uppercase" id="email">{{ mySite.email }}</a>
                <a href="{{ mySite.telegram }}" class="mx-2 text-uppercase" id="telegram"><i class="fa-brands fa-telegram"></i></a>
                <a href="tel:{{ mySite.phone }}" class="mx-2" id="phone">{{ mySite.phone }}</a>
            </div>
        </div>
    </nav>
</header>
<button id="backToTopBtn" class="back-to-top"><i class="fa-solid fa-arrow-up"></i></button>

<main>
    <section id="product-banner">
        <div class="banner-wrapper title-bold">
            <img src="{{ baseUrl }}{{ mySite.banner.img }}"  alt="banner"/>
            <div class="carousel-caption-custom text-uppercase">
                {% if (mySite.menu.currentLang == "РУ") %}
                    <h3 class="oxus_ws_h3" style="max-width: 450px">{{ mySite.banner.title_rest }}<span class="oxus_ws_title">{{ mySite.banner.title_strong }}</span></h3>
                {% elif (mySite.menu.currentLang == "EN") %}
                    <h3 style="max-width: 440px"><span>{{ mySite.banner.title_strong }}</span>{{ mySite.banner.title_rest }}</h3>
                {% else %}
                    <h3 style="max-width: 450px"><span>{{ mySite.banner.title_strong }}</span>{{ mySite.banner.title_rest }}</h3>
                {% endif %}
                <p>
                    {{ mySite.banner.caption }}
                </p>
            </div>
        </div>
    </section>

    <section id="problem-emphasize" class="scroll-margin-top-class">
        <span class="section-title custom-feature-container">{{ mySite.firstSection.title }}</span>
        <div class="custom-container">
            <div class="row mt-5 justify-content-center">
                {% for problem_feature in mySite.firstSection.problem_features %}
                    <div class="problem-feature">
                        <div class="image-wrapper-problem">
                            <img src="{{ baseUrl }}{{ problem_feature.img }}"/>
                        </div>
                        <div class="feature-data">
                            <h5 class="text-uppercase">{{ problem_feature.title }}</h5>
                            <p>{{ problem_feature.caption }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <section id="second-section-features" class="custom-features-product scroll-margin-top-class">
        <span class="section-title custom-feature-container">{{ mySite.secondSection.title }}</span>
        <div class="row mt-5 justify-content-center custom-feature-container custom-product-div">
            {% for iconFeature in mySite.secondSection.iconFeatures %}
                <div class="custom-feature">
                    <div class="feature-image-container">
                        <img src="{{ baseUrl }}{{ iconFeature.img }}" class="custom-feature-img" />
                    </div>
                    <div class="feature-data">
                        <h5 class="text-uppercase">{{ iconFeature.title }}</h5>
                        <p>{{ iconFeature.paragraph }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <section id="agrometeostation-custom" class="scroll-margin-top-class">
        <div class="custom-container section-wrapper-ordinary reverse-flex">
            <div class="text-block">
                <div>
                    <h3 class="text-uppercase">{{ mySite.how_it_works.title }}</h3>
                    <p>
                        {{ mySite.how_it_works.text }}
                    </p>
                </div>
            </div>
            <div class="image-block">
                <div id="meteostation-wrap">
                    <a href="{{ baseUrl }}{{ mySite.how_it_works.img }}"
                       data-fancybox>
                        <img src="{{ baseUrl }}{{ mySite.how_it_works.img }}" class="mb-3" style="box-shadow: none"/>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section id="gallery-section" class="scroll-margin-top-class">
        <div class="gallery-wrapper custom-container carousel-wrapper">
            <span class="carousel-title mb-4">{{ mySite.product_gallery.title }}</span>
            <div class="carousel-bottom py-3">
                {% for productPhoto in mySite.product_gallery.folder | getFiles %}
                    <div class="carousel-cell-bottom">
                        <a href="{{ mySite.product_gallery.sub }}{{ productPhoto }}"
                           data-fancybox="gallery">
                            <img src="{{ mySite.product_gallery.sub }}{{ productPhoto }}" class="carousel-image-bottom" alt="test"/>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <section id="agrometeostation-custom" class="scroll-margin-top-class" style="background-color: rgb(227, 242, 253)!important">
        <div class="custom-container section-wrapper-ordinary reverse-flex">
            <div class="text-block">
                <div>
                    <h3 class="text-uppercase">{{ mySite.video.title }}</h3>
                    <p>
                        {{ mySite.video.text }}
                    </p>
                </div>
            </div>
            <div class="image-block">
                <div id="meteostation-wrap" class="thumbnail-wrapper">
                    <a data-fancybox href="{{ mySite.video.link }}">
                        <img src="{{ baseUrl }}{{ mySite.video.thumbnail }}" alt="test" class="video-thumbnail"/>
                        <div class="play-button" id="play-button"><img src="{{ baseUrl }}../assets/img/icons/play-button.png" alt="play"/></div>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section id="meteostation-online" class="scroll-margin-top-class">
        <div class="custom-container section-wrapper-ordinary">
            <div class="image-block">
                <div id="meteostation-wrap">
                    <a href="{{ baseUrl }}{{ mySite.dashboard.photo_one }}"
                       data-fancybox="meteostation">
                        <img src="{{ baseUrl }}{{ mySite.dashboard.photo_one }}" class="mb-3"/>
                    </a>
                </div>
            </div>
            <div class="text-block">
                <div>
                    <h3 class="text-uppercase mb-3">{{ mySite.dashboard.title}}</h3>
                    <p>{{ mySite.dashboard.text }}</p>
                </div>
            </div>
        </div>
    </section>

    <section id="hardware-characteristics" class="scroll-margin-top-class">
        <div class="custom-container section-wrapper-ordinary reverse-flex">
            <div class="text-block">
                <div>
                    <h3 class="text-uppercase">{{ mySite.hardware.title }}</h3>
                    <p>
                        {{ mySite.hardware.text }}
                    </p>
                </div>
            </div>
            <div class="image-block">
                <div id="meteostation-wrap">
                    <a href="{{ baseUrl }}{{ mySite.hardware.photo }}"
                       data-fancybox>
                        <img src="{{ baseUrl }}{{ mySite.hardware.photo }}" class="mb-3" style="max-height: 700px"/>
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>

{% include 'footer.njk' %}